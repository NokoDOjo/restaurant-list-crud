<h1 class="mb-1 restaurant-show-title">{{ options.name }}</h1>
<div class="container">
  <form class="form-panel" action="/restaurants/{{ options._id }}?_method=PUT" method="POST">
    <h4 class="fw-semibold">修改餐廳資訊</h4>
    <div class="row g-2">
      <div class="col-md-6">
        <div class="form-floating">
          <div class="input-group">
            <span class="input-group-text"><i class="fa-solid fa-store"></i></span>
            <div class="form-floating">
              <input type="text" class="form-control" value="{{ options.name }}" name="name">
              <label for="name">名稱</label>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-floating">
          <div class="input-group">
            <span class="input-group-text"><i class="fa-solid fa-store"></i></span>
            <div class="form-floating">
              <input type="text" class="form-control" value="{{ options.name_en }}" name="name_en">
              <label for="name_en">英文名稱</label>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-floating">
          <div class="input-group">
            <span class="input-group-text"><i class="fa-solid fa-box"></i></span>
            <div class="form-floating">
              <select id="search-category" name="category" class="form-control" aria-label="select by category" {{#if
                category}}data-value={{ category }} {{/if}}>
                <option value="All">所有分類</option>
                <option value="日本料理">日本料理</option>
                <option value="義式餐廳">義式餐廳</option>
                <option value="美式">美式</option>
                <option value="咖啡">咖啡</option>
                <option value="中東料理">中東料理</option>
                <option value="酒吧">酒吧</option>
              </select>
              <label for="category">分類</label>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-floating">
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-mobile-alt pr-2"></i></span>
            <div class="form-floating">
              <input type="text" class="form-control" value="{{ options.phone }}" name="phone">
              <label for="phone">電話</label>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-floating">
          <div class="input-group">
            <span class="input-group-text"><i class="fa-solid fa-star"></i></span>
            <div class="form-floating">
              <input type="text" class="form-control" value="{{ options.rating }}" name="rating">
              <label for="rating">評分</label>
            </div>
          </div>
        </div>
      </div>
      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-map-marker-alt pr-2"></i></span>
        <div class="form-floating">
          <input type="text" class="form-control" value="{{ options.location }}" name="location">
          <label for="location">地址</label>
        </div>
      </div>
      <div class="input-group">
        <span class="input-group-text"><i class="fa-solid fa-location-arrow"></i></span>
        <div class="form-floating">
          <input type="text" class="form-control" value="{{ options.google_map }}" name="google_map" >
          <label for="google_map">google map</label>
        </div>
      </div>
      <div class="input-group">
        <span class="input-group-text"><i class="fa-solid fa-image"></i></span>
        <div class="form-floating">
          <input type="text" class="form-control" value="{{ options.image }}" name="image">
          <label for="image">圖片</label>
        </div>
      </div>
      <div class="input-group">
        <span class="input-group-text"><i class="fa-solid fa-pen"></i></span>
        <div class="form-floating">
          <textarea class="form-control" aria-label="With textarea" name="description">{{ options.description }}</textarea>
          <label for="description">敘述</label>
        </div>
      </div>
    </div>
    <div class="btn-panel mt-3">
      <a href="javascript:history.back()" class="btn btn-warning btn-m">Back</a>
      <button type="submit" class="btn btn-dark btn-m">Modify</button>
    </div>
    {{!-- {{#if}} --}}
    <div class="alert alert-danger mt-3 mx-auto mb-5" role="alert">
      {{ checkResult }}
    </div>
    {{!-- {{/if}} --}}
  </form>
</div>