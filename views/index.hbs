<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱、分類、評分"
            aria-label="Restaurant Name..." value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <div class="search-add-new">
      <span><i class="fa-solid fa-circle-plus"></i> 新增餐廳</span>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-2 mb-5">
  {{#if restaurants}}
    <div class="row">
      {{#each restaurants}}
        <div class="col-md-4">
          {{!-- <a href="/restaurants/{{ this._id }}" class="text-secondary"> --}}
            <div class="card mt-5 mb-2">
              <div class="img-box">
                <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
              </div>
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{ this.name }}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                </div>
                <span class="score badge font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
            <ul class="btn-panel">
              <li>
                <form action="" method="POST" class="btn-delete-box">
                  <button class="btn btn-dark" type="submit">Delete</button>
                </form>
              </li>
              <li>
                <a class="btn btn-secondary" href="/restaurants/{{ this._id }}">Detail</a>
              </li>
              <li>
                <a class="btn btn-secondary" href="">Edit</a>
              </li>
            </ul>
            
          {{!-- </a> --}}
        </div>
      {{/each}}
    </div>
  {{/if}}

